<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
      <TargetFramework>net9.0</TargetFramework>
      <ImplicitUsings>enable</ImplicitUsings>
      <Nullable>enable</Nullable>
      <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
      <Authors>Red Owl Games</Authors>
      <PackageId>RayUI</PackageId>
      <Version>0.1.0</Version>
      <Description>Retained-mode UI toolkit for Raylib_CS</Description>
      <PackageTags>raylib ui retained-mode graphics game-dev</PackageTags>
      <RepositoryUrl>https://github.com/red-owl-games/RayUI</RepositoryUrl>
      <RootNamespace>Raylib.UI</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.7" />
      <PackageReference Include="Raylib-cs" Version="7.0.1" />
    </ItemGroup>

</Project>
